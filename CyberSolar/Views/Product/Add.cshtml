@model CyberSolar.Models.ProductViewModel
@{
    ViewBag.Title = "Product";
    Layout = Model.SharedViewLayout;
}

@section MyStyles{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .subject {
            text-align: center;
            color: darkgreen;
            font-size: 70px;
        }

        .content {
            max-width: 80%;
            margin: auto;
        }

        .errorMessage {
            color: red;
            font-weight: bold;
        }
        .result {
            color: green;
            font-size: 30px;
        }
    </style>
}

<div>
    <h1 class="subject">Product Information</h1>
    @*@Html.ActionLink("Search", "Edit", "Category", new { Id = category.Id }, null)*@
    <form method="post">
        <table style="width: 70%; margin: auto">
            <tr>
                <td>
                    @Html.TextBoxFor(c => c.SearchText, Model.SearchText)
                    <input type="submit" value="Search"/>
                </td>
            </tr>
        </table>
    </form>
    <form method="post">
        <table style="width: 70%; margin: auto">
            <tr>
                <td>@Html.LabelFor(c => c.CategoryId)</td>
                <td>@Html.DropDownListFor(c => c.CategoryId, Model.CategorySelectListItems, "-Select-")</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Code)</td>
                <td>
                    @Html.TextBoxFor(c => c.Code, Model.Code)
                    <br/><span class="errorMessage">@Html.ValidationMessageFor(c => c.Code)</span>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Name)</td>
                <td>
                    @Html.TextBoxFor(c => c.Name, Model.Name)
                    <br/><span class="errorMessage">@Html.ValidationMessageFor(c => c.Name)</span>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.ReorderLevel)</td>
                <td>
                    @Html.TextBoxFor(c => c.ReorderLevel, Model.ReorderLevel = 10)
                    <br/><span class="errorMessage">@Html.ValidationMessageFor(c => c.ReorderLevel)</span>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Description)</td>
                <td>
                    @Html.TextBoxFor(c => c.Description, Model.Description)
                    <br/><span class="errorMessage">@Html.ValidationMessageFor(c => c.Description)</span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Save"/></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <p class="result">@ViewBag.Message</p>
                    }
                </td>
            </tr>
        </table>
    </form>

    <p></p>
    @{
        Html.RenderPartial(Model.SharedViewString, Model);
    }

</div>

@section MyScripts{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}