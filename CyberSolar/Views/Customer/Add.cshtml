@model CyberSolar.Models.CustomerViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer Information</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .subject {
            text-align: center;
            color: darkgreen;
            font-size: 70px;
        }

        .content {
            max-width: 80%;
            margin: auto;
        }

        .errorMessage {
            color: red;
            font-weight: bold;
        }
    </style>
</head>

<body class="content">
    <div>
        <h1 class="subject">Customer Information</h1>
        <form method="post">
            <table style="width: 70%; margin: auto">

                <tr>
                    <td>@Html.LabelFor(c => c.Code)</td>
                    <td>@Html.TextBoxFor(c => c.Code, Model.Code)</td>
                    <td class="errorMessage">@Html.ValidationMessageFor(c => c.Code)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Name)</td>
                    <td>@Html.TextBoxFor(c => c.Name, Model.Name)</td>
                    <td class="errorMessage">@Html.ValidationMessageFor(c => c.Name)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Address)</td>
                    <td>@Html.TextBoxFor(c => c.Address, Model.Address)</td>
                    <td class="errorMessage">@Html.ValidationMessageFor(c => c.Address)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Email)</td>
                    <td>@Html.TextBoxFor(c => c.Email, Model.Email)</td>
                    <td class="errorMessage">@Html.ValidationMessageFor(c => c.Email)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Contact)</td>
                    <td>@Html.TextBoxFor(c => c.Contact, Model.Contact)</td>
                    <td class="errorMessage">@Html.ValidationMessageFor(c => c.Contact)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.LoyaltyPoint)</td>
                    <td>@Html.TextBoxFor(c => c.LoyaltyPoint, Model.LoyaltyPoint)</td>
                    <td class="errorMessage">@Html.ValidationMessageFor(c => c.LoyaltyPoint)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Save" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @if (ViewBag.Message != null)
                        {
                            <h2>@ViewBag.Message</h2>
                        }
                    </td>
                    <td></td>
                </tr>

            </table>
        </form>
        <p></p>
        <table>
            <tr>
                <th>SI</th>
                <th>Code</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Loyalty Point</th>
                <th>Action</th>
            </tr>
            @{ int sl = 0;}
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@(++sl)</td>
                    <td>@customer.Code</td>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                    <td>@customer.Email</td>
                    <td>@customer.Contact</td>
                    <td>@customer.LoyaltyPoint</td>
                    <td>
                        <span style="color: blue; font-weight: bold">Edit</span> /
                        <span style="color: red; font-weight: bold">Delete</span>
                    </td>
                </tr>
            }

        </table>
    </div>

    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

</body>
</html>
