@model CyberSolar.Models.CustomerViewModel
@{
    ViewBag.Title = "Search";
    Layout = Model.SharedViewLayout;
}

@section MyStyles{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .subject {
            text-align: center;
            color: darkgreen;
            font-size: 70px;
        }

        .content {
            max-width: 80%;
            margin: auto;
        }

        .errorMessage {
            color: red;
            font-weight: bold;
        }
        .result {
            color: green;
            font-size: 30px;
        }
        .searchBox {
            margin: auto;
            width: 70%;
            text-align: right
        }
    </style>
}

<div>
    <h1 class="subject">Customer Information</h1>
    <form method="post">
        <p class="searchBox">
            @Html.TextBoxFor(c => c.SearchText, Model.SearchText)
            <input type="submit" value="Search" formaction="Search" />
        </p>
        @if (ViewBag.Message != null)
        {
            <p class="result">@ViewBag.Message</p>
        }
    </form>
    <p></p>
    @{
        Html.RenderPartial(Model.SharedViewString, Model);
    }
    <br />
    @Html.ActionLink("Back to Home", "Add", "Customer")
</div>

@section MyScripts{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

