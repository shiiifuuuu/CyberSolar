@model CyberSolar.Models.CustomerViewModel
@{
    ViewBag.Title = "Customer Information";
    Layout = Model.SharedViewLayout;
}

@section MyStyle{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .subject {
            text-align: center;
            color: darkgreen;
            font-size: 70px;
        }

        .content {
            max-width: 80%;
            margin: auto;
        }

        .errorMessage {
            color: red;
            font-weight: bold;
        }
    </style>
}

<div>
    <h1 class="subject">Customer Information</h1>
    <form method="post">
        <table style="width: 70%; margin: auto">
            <tr>
                <td>Search: @Html.TextBox("SearchText")</td>
                <td><input type="submit" value="search" /></td>
            </tr>
            <tr>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <h2>@ViewBag.Message</h2>
                    }
                </td>
                <td></td>
            </tr>

        </table>
    </form>
    <p></p>
    @{
        Html.RenderPartial(Model.SharedViewString, Model);
    }
</div>

@section MyScript{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

