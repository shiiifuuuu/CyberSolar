@model CyberSolar.Models.SupplierViewModel
@{
    ViewBag.Title = "Edit";
    Layout = Model.SharedViewLayout;
}

@section MyStyles{
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    .subject {
        text-align: center;
        color: darkgreen;
        font-size: 70px;
    }

    .content {
        max-width: 80%;
        margin: auto;
    }

    .errorMessage {
        color: red;
        font-weight: bold;
    }
</style>
}

<div>
    <h1 class="subject">Supplier Information</h1>
    <form method="post">
        <h3 style="color: red">Do you want to update this supplier values:</h3>
        <table style="width: 70%; margin: auto">
            <tr>
                <td>@Html.LabelFor(c => c.Code)</td>
                <td>@Html.TextBoxFor(c => c.Code, Model.Code, new { data_val = "false", @readonly="readonly" })</td>
                <td class="errorMessage">@Html.ValidationMessageFor(c => c.Code)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Name)</td>
                <td>@Html.TextBoxFor(c => c.Name, Model.Name)</td>
                <td class="errorMessage">@Html.ValidationMessageFor(c => c.Name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Address)</td>
                <td>@Html.TextBoxFor(c => c.Address, Model.Address)</td>
                <td class="errorMessage">@Html.ValidationMessageFor(c => c.Address)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Email)</td>
                <td>@Html.TextBoxFor(c => c.Email, Model.Email, new { data_val = "false", @readonly = "readonly" })</td>
                <td class="errorMessage">@Html.ValidationMessageFor(c => c.Email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Contact)</td>
                <td>@Html.TextBoxFor(c => c.Contact, Model.Contact, new { data_val = "false", @readonly = "readonly" })</td>
                <td class="errorMessage">@Html.ValidationMessageFor(c => c.Contact)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.ContactPerson)</td>
                <td>@Html.TextBoxFor(c => c.ContactPerson, Model.ContactPerson)</td>
                <td class="errorMessage">@Html.ValidationMessageFor(c => c.ContactPerson)</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Update" /></td>
                <td></td>
            </tr>

        </table>
    </form>
    <p></p>
    @{
        Html.RenderPartial(Model.SharedViewString, Model);
    }
    <br />
    @Html.ActionLink("Back to Home", "Add", "Supplier")
</div>

@section MyScripts{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

