@model CyberSolar.Models.CategoryViewModel
@{
    ViewBag.Title = "Category";
    Layout = Model.SharedViewLayout;
}

@*<!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Add</title>*@
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    .subject {
        text-align: center;
        color: darkgreen;
        font-size: 70px;
    }

    .content {
        max-width: 80%;
        margin: auto;
    }

    .errorMessage {
        color: red;
        font-weight: bold;
    }
</style>

@*</head>*@
<body class="content">
    <div>
        <h1 class="subject">Category Information</h1>

        <form method="post">
            <table style="width: 70%; margin: auto">
                <tr>
                    <td>Code:</td>
                    @*<td><input type="text" name="RollNo" value="@Model.RollNo" /></td>*@
                    <td>@Html.TextBox("Code", Model.Code)</td>
                    <td>@Html.ValidationMessageFor(c => c.Code)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Name):</td>
                    @*<td><input type="text" name="Name" value="@Model.Name" /></td>*@
                    <td>@Html.TextBoxFor(c => c.Name, Model.Name)</td>
                    <td></td>
                </tr>

                <tr>
                    <td>Name:</td>
                    <td><input type="submit" value="update" /></td>
                    <td>
                        @if (ViewBag.Message != null)
                        {
                            <h2>@ViewBag.Message</h2>
                        }
                    </td>
                </tr>
            </table>
        </form>
        <p></p>
        @{
            Html.RenderPartial(Model.SharedViewString, Model);
        }

    </div>

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
